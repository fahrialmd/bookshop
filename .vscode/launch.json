	"version": "0.2.0",
	"configurations": [
		{
			"command": "npx cds bind --exec mvn spring-boot:run",
			"name": "cds bind hybrid",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"name": "Launch Approuter",
			"program": "${workspaceFolder}/app/router/node_modules/@sap/approuter/approuter.js",
			"request": "launch",
			"skipFiles": ["<node_internals>/**"],
			"type": "node",
			"localRoot": "${workspaceFolder}/app/router",
			"env": {
				"CF_NODEJS_LOGGING_LEVEL": "debug",
				"XS_APP_LOG_LEVEL": "debug"
			}
		},
		{
			"type": "java",
			"name": "Spring Boot-Application Bookshop",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"mainClass": "com.sap.capire.bookshop.Application",
			"projectName": "bookshop",
			"preLaunchTask": "cds_bind"
		}
	],
	"compounds": [
		{
			"name": "ðŸš€ Start Full App (Spring Boot + Approuter)",
			"configurations": [
				"Spring Boot-Application Bookshop",
				"Launch Approuter"
			],
			"stopAll": true,
			"presentation": {
				"hidden": false,
				"group": "Full Stack",
				"order": 1
			}
		}
	]
}
